union either = left | right;

predicate test(x: either) {
    constraint x == either::right;
    constraint match x {
        either::left => true,
        either::right => false,
    };
}

predicate decl_test(x: either) {
    constraint x == either::right;
    match x {
        either::left => {
            constraint true;
        }
        either::right => {
            constraint false;
        }
    }
}

