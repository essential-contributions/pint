// Find three consecutive integers such that their product is equal to their sum.
predicate test(x: int[3]) {
    constraint forall i in 1..2 {
        x[i] == x[i - 1] + 1
    };

    constraint x[0] + x[1] + x[2] == x[0] * x[1] * x[2];
}

