macro @a($x) {
    @c($x)
}

macro @b($y) {
    @c($y)
}

macro @c($z) {
    $z == 0
}

var v: int;

constraint @a(v);
constraint @b(v);
constraint @a(v);
constraint @b(v);

solve satisfy;

