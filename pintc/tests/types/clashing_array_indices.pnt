predicate test {
    var a: int[4];
    var b: int[4];

    // The inner `i` is shadowing the outer `i` which is probably not what we want to allow, considering
    // we disallow shadowing everywhere else in Pint.

    constraint forall i in 0..3 {
        b[i] == i &&
        forall i in 0..3 {
            a[i] > b[i]
        }
    };
}

