union MyUnion = A | B;

storage {
    a: int,
    b: bool,
    c: b256,
    d: { int, bool },
}

predicate test(
    a_len: int,
    b_len: int,
    c_len: int,
    d_len: int,
) {
    let a = storage::a;
    let b = storage::b;
    let c = storage::c;
    let d = storage::d;

    constraint a_len == __size_of(a);
    constraint b_len == __size_of(b);
    constraint c_len == __size_of(c);
    constraint d_len == __size_of(d);
}

