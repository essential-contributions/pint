// Find three consecutive negative integers such that their product is equal to their sum.

predicate Test {
    var x: int[3];

    constraint forall i in 1..2 {
        x[i] == x[i - 1] + 1
    };

    constraint forall i in 0..2 {
        -x[i] > 0
    };

    constraint x[0] + x[1] + x[2] == x[0] * x[1] * x[2];
}
